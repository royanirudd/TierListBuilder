doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title
    style.
      body {
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        background-color: #f0f0f0;
      }
      .container {
        text-align: center;
        background-color: white;
        padding: 3rem;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.15);
        width: 80%;
        max-width: 500px;
      }
      h1 {
        color: #333;
        font-size: 2.5rem;
        margin-bottom: 2rem;
      }
      .login-options, .user-info {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
        margin-top: 2rem;
      }
      .button {
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        width: 80%;
        max-width: 300px;
        text-decoration: none;
        color: white;
      }
      .button:hover {
        opacity: 0.9;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      }
      .github {
        background-color: #24292e;
      }
      .google {
        background-color: #4285F4;
      }
      .guest {
        background-color: #34a853;
      }
      .tierlist {
        background-color: #4285F4;
      }
      .logout {
        background-color: #DB4437;
      }
      .welcome-message {
        margin-bottom: 1rem;
        font-size: 1.2rem;
        color: #333;
      }
  body
    .container
      h1= title
      if user
        .user-info
          p.welcome-message Welcome, #{user.name}!
          a.button.tierlist(href="/tierlist") Go to Tier List
          a.button.logout(href="/auth/logout") Logout
      else
        .login-options
          a.button.github(href="/auth/github") Login with GitHub
          a.button.google(href="/auth/google") Login with Google
          a.button.guest(href="/tierlist?guest=true") Continue Without Logging in
